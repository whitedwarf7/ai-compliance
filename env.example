# AI Compliance Platform Configuration

# ===========================================
# AI Provider Configuration
# ===========================================

# Provider to use: openai or azure
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Azure OpenAI Configuration (if using azure provider)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Default model (used if not specified in request)
DEFAULT_MODEL=gpt-4o

# ===========================================
# Database Configuration
# ===========================================

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ai_compliance
POSTGRES_USER=compliance_user
POSTGRES_PASSWORD=change-this-secure-password

# ===========================================
# Service Configuration
# ===========================================

# Gateway Service
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000

# Audit Service
AUDIT_HOST=0.0.0.0
AUDIT_PORT=8001
AUDIT_SERVICE_URL=http://audit:8001

# ===========================================
# Logging & Retention
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Number of days to retain audit logs
LOG_RETENTION_DAYS=365

# ===========================================
# Security
# ===========================================

# Secret key for hashing (change in production)
SECRET_KEY=change-this-to-a-secure-random-string

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
